<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.mukesh.drawingview.example.ZhuJieMian">

  <Button
      android:id="@+id/button1"
      android:layout_width="162dp"
      android:layout_height="100dp"
      android:layout_marginLeft="80dp"
      android:layout_marginTop="25dp"
      android:backgroundTint="@color/materialcolorpicker__green"
      android:textColor="@color/materialcolorpicker__white"
      android:drawableLeft="@mipmap/ic_launcher"

      android:text="简笔画"
      android:textSize="25sp"/>

  <Button
      android:id="@+id/button2"
      android:layout_width="162dp"
      android:layout_height="100dp"
      android:layout_marginLeft="360dp"
      android:layout_marginTop="25dp"
      android:backgroundTint="@color/materialcolorpicker__green"
      android:textColor="@color/materialcolorpicker__white"
      android:text="专业模式"
      android:textSize="25sp" />

  <Button
      android:id="@+id/button3"
      android:layout_width="162dp"
      android:layout_height="100dp"
      android:layout_marginLeft="640dp"
      android:layout_marginTop="25dp"
      android:backgroundTint="@color/materialcolorpicker__green"
      android:textColor="@color/materialcolorpicker__white"
      android:text="模型库"
      android:textSize="25sp" />

  <Button
      android:id="@+id/button4"
      android:layout_width="162dp"
      android:layout_height="100dp"
      android:layout_marginLeft="80dp"
      android:layout_marginTop="200dp"
      android:backgroundTint="@color/materialcolorpicker__green"
      android:textColor="@color/materialcolorpicker__white"
      android:text="设置"
      android:textSize="25sp" />

  <Button
      android:id="@+id/button5"
      android:layout_width="162dp"
      android:layout_height="100dp"
      android:layout_marginLeft="360dp"
      android:layout_marginTop="200dp"
      android:backgroundTint="@color/materialcolorpicker__green"
      android:textColor="@color/materialcolorpicker__white"
      android:text="U盘文件"
      android:textSize="25sp" />

  <Button
      android:id="@+id/button6"
      android:layout_width="162dp"
      android:layout_height="100dp"
      android:layout_weight="0"
      android:layout_marginLeft="640dp"
      android:layout_marginTop="200dp"
      android:backgroundTint="@color/materialcolorpicker__green"
      android:textColor="@color/materialcolorpicker__white"
      android:onClick="send_command"
      android:text="一键预热"
      android:textSize="25sp" />


</RelativeLayout>

